<Window x:Class="Events.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Events"
        mc:Ignorable="d"
        Title="Стрибаючі кнопки" Height="250" Width="425"
        WindowStartupLocation="CenterScreen"
        SizeChanged="Window_SizeChanged">
    <Canvas MouseDown="Canvas_MouseDown" Background="White">
        <Button x:Name="button1" Content="Закрити" Canvas.Left="10" Canvas.Top="10" Width="75" Click="button1_Click" />
        <Button x:Name="button2" Content="" Canvas.Left="95" Canvas.Top="10" Width="75"  MouseMove="button2_MouseMove" Click="button2_Click"/>
    </Canvas>
</Window>
